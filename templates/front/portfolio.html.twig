{% extends 'base.html.twig' %}

{% block title %}Mon portfolio{% endblock %}

{% block body %}
		<div id="fh5co-main">

			<div class="fh5co-gallery">

            {% for galerie in galeries %}
				<a class="gallery-item" href="{{ path('front_galerie', {'id': galerie.id}) }}">
					<img src="{{ vich_uploader_asset(galerie) }}" alt="">
					<span class="overlay">
						<h2>{{ galerie.titre }}</h2>
						<span>{{ galerie.description }}</span>
					</span>
				</a>
            {% endfor %}
			</div>
		

			<div class="fh5co-narrow-content">
				<div class="row">
					<div class="col-md-4 animate-box" data-animate-effect="fadeInLeft">
						<h1 class="fh5co-heading-colored">Me contacter</h1>
					</div>
				</div>
				<div class="row">
					<div class="col-md-12 animate-box" data-animate-effect="fadeInLeft">
						<p class="fh5co-lead">Pour plus d'informations sur mes prestations :</p>
						<p><a href="{{ path ('contact') }}" class="btn btn-primary btn-outline">Contactez-moi</a></p>
					</div>
					
				</div>
			</div>

		</div>
{% endblock %}