{% extends 'base-admin.html.twig' %}

{% block title %}Photo{% endblock %}

{% block body %}
    <h1>Photo</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ photo.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ photo.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ photo.description }}</td>
            </tr>
            <tr>
                <th>File</th>
                <td>{{ photo.file }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ photo.createdAt ? photo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdateAt</th>
                <td>{{ photo.updateAt ? photo.updateAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('photo_admin_index') }}" class="btn btn-primary mb-1 btn-sm">Retour</a>

    <a href="{{ path('photo_edit', {'id': photo.id}) }}"class="btn btn-success mb-1 btn-sm"> <i class="fa fa-pencil-alt"></i> Modifier</a>

    {{ include('photo/_delete_form.html.twig') }}
{% endblock %}
