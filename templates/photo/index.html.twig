{% extends 'base-admin.html.twig' %}

{% block title %}Photo index{% endblock %}

{% block body %}
    <h1>Liste des Photos</h1>
    <a href="{{ path('photo_new') }}" class="btn btn-success btn-lg mb-3">Mettre en ligne une photo</a>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Description</th>
                <th>File</th>
                <th>CreatedAt</th>
                <th>UpdateAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for photo in photos %}
            <tr>
                <td>{{ photo.id }}</td>
                <td>{{ photo.titre }}</td>
                <td>{{ photo.description }}</td>
                <td>{{ photo.file }}</td>
                <td>{{ photo.createdAt ? photo.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ photo.updateAt ? photo.updateAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('photo_show', {'id': photo.id}) }}"class="btn btn-primary mb-1 btn-sm"> <i class="fa fa-eye"></i> Voir</a>
                    <a href="{{ path('photo_edit', {'id': photo.id}) }}" class="btn btn-success btn-sm"> <i class="fa fa-pencil-alt"></i> Editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
