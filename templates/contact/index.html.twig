{% extends 'base.html.twig' %}

{% block title %}Me contacter{% endblock %}

{% block body %}
    <div id="fh5co-main">
        <div class="row">
            <div class="col>
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success">
                        {{ message }}
                    </div>
                {% endfor %}
            </div>
        </div>

        <div class="fh5co-more-contact">
            <div class="fh5co-narrow-content">
                <div class="row">
                    <div class="col-md-4">
                        <div class="fh5co-feature fh5co-feature-sm animate-box" data-animate-effect="fadeInLeft">
                            <div class="fh5co-icon">
                                <i class="icon-envelope-o"></i>
                            </div>
                            <div class="fh5co-text">
                                <p><a href="#">info@domain.com</a></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="fh5co-feature fh5co-feature-sm animate-box" data-animate-effect="fadeInLeft">
                            <div class="fh5co-icon">
                                <i class="icon-map-o"></i>
                            </div>
                            <div class="fh5co-text">
                                <p>198 West 21th Street, Suite 721 New York NY 10016</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="fh5co-feature fh5co-feature-sm animate-box" data-animate-effect="fadeInLeft">
                            <div class="fh5co-icon">
                                <i class="icon-phone"></i>
                            </div>
                            <div class="fh5co-text">
                                <p><a href="tel://">+123 456 7890</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="fh5co-narrow-content animate-box" data-animate-effect="fadeInLeft">
            <div class="row">
                <div class="col-md-4">
                    <h1>Contactez-moi</h1>
                </div>
            </div>

            <div class="row">
                <div class="col-md-12">
                {{ form_start(contactForm) }}
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="nom">Prénom et nom</label>
                                {{ form_widget(contactForm.nom, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                {{ form_widget(contactForm.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="telephone">Téléphone</label>
                                {{ form_widget(contactForm.telephone, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <label for="message">Message</label>
                                {{ form_widget(contactForm.message, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="form-group">
                                <button class="btn btn-primary btn-md">
                                    {{ button_label|default('Envoyer') }}
                                </button>
                            </div>
                        </div>
                    </div>
                {{ form_end(contactForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
